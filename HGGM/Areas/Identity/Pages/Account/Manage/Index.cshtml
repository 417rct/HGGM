@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage"/>
<div class="column is-one-third">
    <form id="profile-form" method="post">
        <div asp-validation-summary="All" class="is-danger"></div>
        <div class="control">
            <label asp-for="Username" class="label"></label>
            <input asp-for="Username" class="input" disabled/>
        </div>
        <div class="field">
            <label asp-for="Input.Email" class="label"></label>
            @if (Model.IsEmailConfirmed)
            {
                <div class="control">
                    <input asp-for="Input.Email" class="input"/>
                    <span aria-hidden="true">
                        <span class="is-success"></span>
                    </span>
                </div>
            }
            else
            {
                <input asp-for="Input.Email" class="input"/>
                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="button is-link" style="margin-top: 0.5rem">Send verification email</button>
            }
            <span asp-validation-for="Input.Email" class="is-danger"></span>
        </div>
        <div class="control">
            <label asp-for="Input.PhoneNumber" class="label"></label>
            <input asp-for="Input.PhoneNumber" class="input"/>
            <span asp-validation-for="Input.PhoneNumber" class="is-danger"></span>
        </div>
        <button type="submit" class="button is-link" style="margin-top: 1rem">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}