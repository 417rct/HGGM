@model HGGM.Models.Events.Event

@{
    ViewData["Title"] = "Create";
}


<div>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Name">Event Name</label>
            <input asp-for="Name" class="input" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="TakesPlace">Start Date&Time</label>
            <input asp-for="TakesPlace" type="text" id="takesPlacePicker" class="input" />
            <span asp-validation-for="TakesPlace"></span>
        </div>
        <div>
            <label asp-for="EndDate">End Date&Time</label>
            <input asp-for="EndDate" type="text" id="endDatePicker" class="input" />
            <span asp-validation-for="EndDate"></span>
        </div>
        <div>
            <label asp-for="EventType">Event Type</label>
            <input asp-for="EventType" type="text" class="input"/>
            <span asp-validation-for="EventType"></span>
        </div>
   
    </form>
</div>

<div>
    <a asp-action="PublishedIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('#takesPlacePicker').datetimepicker({
            inline: false
        });
    </script>
    <script>
        $('#endDatePicker').datetimepicker({
            inline: false
        });
    </script>
}



