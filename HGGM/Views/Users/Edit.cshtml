@using Microsoft.AspNetCore.Mvc.Localization
@model HGGM.ViewModels.UserWithRolesViewModel
@inject IViewLocalizer lang

@{
    ViewData["Title"] = lang["title"];
}

<h2>@lang["header"]</h2>


<div class="column is-one-quarter">
    <form asp-action="Edit"> 
        <div class="column">
            <div asp-validation-summary="All" class="is-danger"></div>
            <div class="field">
                <label class="label">@lang["nickname"]</label>
                <div class="control">
                    <input asp-for="Username" class="input" />
                    <span asp-validation-for="Username" class="is-danger"></span>
                </div>
            </div>
            <div class="field">
                <label class="label">@lang["roles"]</label>
                <div class="control">
                    @foreach (var role in Model.AllRoles)
                    {
                        <label class="checkbox">
                            <input type="checkbox" checked="@(Model.UserRoles.Contains(role) ? "checked" : "")"/>
                            @role
                        </label>
                    }
                </div>
            </div>
            <div class="control">
                <button type="submit" class="button is-link">@lang["save"]</button>
            </div>
            <div class="control" style="margin-top: 1rem">
                <a asp-action="Index">@lang["back"]</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}