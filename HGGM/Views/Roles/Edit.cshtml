@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer L
@model HGGM.Models.Identity.Role

@{
    ViewData["Title"] = "Edit";
}

<h2>@L["editPageTitle"]</h2>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="field">
                <div class="control">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="input" type="text" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="input" type="text" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <label asp-for="NormalizedName" class="control-label"></label>
                    <input asp-for="NormalizedName" class="input" type="text" />
                    <span asp-validation-for="NormalizedName" class="text-danger"></span>
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <label asp-for="ConcurrencyStamp" class="control-label"></label>
                    <input asp-for="ConcurrencyStamp" class="input" type="text" />
                    <span asp-validation-for="ConcurrencyStamp" class="text-danger"></span>
                </div>
            </div>
            <div class="field is-grouped">
                <input type="submit" value="Save" class="button is-link" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@L["backToListButton"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
